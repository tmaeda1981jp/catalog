= form_for @shop do |f|
  - if @shop.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shop.errors.count, "error")} prohibited this shop from being saved:"
      %ul
        - @shop.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :lines_summary
    = f.text_field :lines_summary
  .field
    = f.label :image
    = image_tag(@shop.image_url) if @shop.image?
    = f.file_field :image
    = f.hidden_field :image_cache
  .actions
    = f.submit 'Save'
