%h1 Listing shops

%table
  %tr
    %th Name
    %th Description
    %th Lines summary
    %th Image
    %th
    %th
    %th

  - @shops.each do |shop|
    %tr
      %td= shop.name
      %td= simple_format(shop.description)
      %td= shop.lines_summary
      %td= image_tag(shop.image_url) if shop.image?
      %td= link_to 'Show', shop
      %td= link_to 'Edit', edit_shop_path(shop)
      %td= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Shop', new_shop_path
